<%- include('partials/header') %>

<div class="card container mt-5 text-center w-75">
  <div class="card-header text-primary">
    <span class="align-middle"
      >Welcome Back, <%= locals.name.split(" ")[0] %>..!</span
    >
  </div>
  <div class="card-body">
    <h4 class="card-title">Quick Linker</h4>
    <p class="card-text">
      Elevate Your Sharing Experience with Lightning-Fast Short URLs
    </p>
    <div class="mt-4">
      <a href="/generate" class="btn btn-outline-primary me-3">Generate Link</a>
      <a href="/view" class="btn btn-outline-warning">View Analytics</a>
    </div>
    <div class="d-flex justify-content-center mt-4">
      <div class="card col-md-6 m-2" style="width: 15rem">
        <i class="bi bi-link-45deg" style="font-size: 4rem; color: #007bff"></i>
        <div class="card-body">
          <p class="card-text">
            Generate, share link effortlessly and user-friendly, choosing
            concise, alternatives for efficient top-communication.
          </p>
        </div>
      </div>
      <div class="card col-md-6 m-2" style="width: 15rem">
        <i class="bi bi-bar-chart" style="font-size: 4rem; color: #ffc107"></i>
        <div class="card-body">
          <p class="card-text">
            Monitor link analytics seamlessly for insights into performance,
            user engagement, and your top-performing links.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
